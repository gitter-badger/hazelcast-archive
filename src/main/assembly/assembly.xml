    <fileSets>
        <fileSet>
            <directory>hazelcast-ra/target</directory>
            <outputDirectory>/lib/</outputDirectory>
            <includes>
                <include>hazelcast-ra-${project.version}.rar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>hazelcast-wm/target/</directory>
            <outputDirectory>/lib/</outputDirectory>
