            </includes>
        </fileSet>
        <fileSet>
            <directory>javadoc</directory>
            <outputDirectory>/javadoc</outputDirectory>
            <excludes>
                <exclude>**/.svn/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
