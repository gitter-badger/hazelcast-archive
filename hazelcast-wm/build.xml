<project basedir="." name="hazelcast" default="jar">

    <property name="src.dir" value="src"/>
    <property name="classes.dir" value="web/WEB-INF/classes/"/>
    <property name="war.name" value="demo.war"/>

    <target name="war">
        <jar jarfile="${war.name}">
            <fileset dir="src/test/webapp" defaultexcludes="yes">
                <include name="**/**"/>
            </fileset>  
        </jar>
    </target>
</project>